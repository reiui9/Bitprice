layout-macro-def(BTCRate-details-macro) {
  params {
    param (btcRate) {
      type (BTCRate)
      min (Required)
      max (One)
    }
  }

  content {
    section {
      content {
        image-card {
          aspect-ratio (4:3)
          title-area {
            slot1 {
              text {
                value {
                  template ("#{value (btcRate.coins.coin)}")
                }
              }
            }
          }
          image-url ("#{value (btcRate.chart.url)}")
        }
        paragraph {
          value {
            template ("last : #{value (btcRate.price.last)} #{value (btcRate.coins.exchange)}")
          }
        }
        paragraph {
          value {
            template ("high : #{value (btcRate.price.high)} #{value (btcRate.coins.exchange)}")
          }
        }
        paragraph {
          value {
            template ("low : #{value (btcRate.price.low)} #{value (btcRate.coins.exchange)}")
          }
        }
        paragraph {
          value {
            template ("change percentage : #{value (btcRate.price.change.percentage)}%")
          }
        }
        paragraph {
          value {
            template ("change absolute : #{value (btcRate.price.change.absolute)}")
          }
        }
        paragraph {
          value {
            template ("volume : #{value (btcRate.volume)}")
          }
        }
        
        split-input-cell {
          left {
              input-cell {
                  label {
                      template ("Coin Type")
                  }
                  value {
                      template ("#{value (btcRate.coins.coin)}") // Standard
                  }
                  on-click {
                      intent {
                        goal: BTCRate
                        value: Exchangeinfo {
                          exchange: $expr(btcRate.coins.exchange)
                        }
                      }
                  }
              }
          }
          right {
              input-cell {
                label {
                    template ("Exchange Type")
                }
                value {
                    template ("#{value (btcRate.coins.exchange)}")
                }
                on-click {
                    intent {
                      goal: BTCRate
                      value: Coininfo {
                        coin: $expr(btcRate.coins.coin)
                      }
                    }
                }
              }
          }
        }
      }
    }
  }
}
