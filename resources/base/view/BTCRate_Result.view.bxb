result-view {
  match {
    BTCRate (this)
  }
  
  render {
    if ("size(this) > 1") {
      list-of (this) {
        where-each (item) {
          layout-macro (BTCRate-summary-macro) {
            param (btcRate) {
              expression (item)
            }
          }
        }
      }
    } else-if ("size(this) == 1") {
      layout-macro (BTCRate-details-macro) {
        param (btcRate) {
          expression (this)
        }
      }
    }
  }
}